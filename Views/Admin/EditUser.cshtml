@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <h2>Edit User</h2>

    <form asp-action="EditUser" method="post">
        <input type="hidden" name="id" value="@ViewBag.UserId" />

        <div class="mb-3">
            <label>Email</label>
            <input name="email" class="form-control"
                   value="@ViewBag.Email" />
        </div>

        <div class="mb-3">
            <label>Full Name</label>
            <input name="fullName" class="form-control"
                   value="@ViewBag.FullName" />
        </div>

        <div class="mb-3">
            <label>Goal Type</label>
            <select name="goalType" class="form-control">
                <option selected>@ViewBag.GoalType</option>
                <option>Weight Loss</option>
                <option>Weight Gain</option>
            </select>
        </div>

        <button class="btn btn-success">Save Changes</button>
        <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
