@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "View Feedback";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4">User Feedback</h2>

    <table class="table table-bordered shadow">
        <thead class="table-warning">
            <tr>
                <th>Feedback ID</th>
                <th>User Name</th>
                <th>User Email</th>
                <th>Message</th>
                <th>Date</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var fb in Model)
                {
                    <tr>
                        <td>@fb.Id</td>
                        <td>@(fb.UserFullName ?? "Unknown")</td>
                        <td>@fb.UserEmail </td>
                        <td>@fb.Message</td>
                        <td>@fb.Date.ToString("dd MMM yyyy HH:mm")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No feedback available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    table {
        border-radius: 8px;
        overflow: hidden;
    }
    th, td {
        vertical-align: middle !important;
    }
</style>
