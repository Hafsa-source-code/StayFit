@{
    ViewData["Title"] = "Select Your Goal";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow p-4 goal-card-wrapper">

                <h2 class="text-center text-dark fw-bold mb-3">What is your fitness goal?</h2>
                <p class="text-muted text-center mb-4">
                    Choose a goal so we can prepare the perfect plan for you.
                </p>

                <form method="post">

                    <div class="row">

                        <!-- Weight Loss Card -->
                        <div class="col-md-6 mb-3">
                            <label class="goal-card w-100">
                                <input type="radio" name="goal" value="WeightLoss" class="d-none" required />
                                <div class="goal-option border rounded p-4 text-center shadow-sm">
                                    <h4 class="fw-bold text-danger">Weight Loss</h4>
                                    <p class="text-muted small">
                                        Burn fat to get lean body, improve endurance and build confidence.
                                    </p>
                                </div>
                            </label>
                        </div>

                        <!-- Weight Gain Card -->
                        <div class="col-md-6 mb-3">
                            <label class="goal-card w-100">
                                <input type="radio" name="goal" value="WeightGain" class="d-none" required />
                                <div class="goal-option border rounded p-4 text-center shadow-sm">
                                    <h4 class="fw-bold text-success">Weight Gain</h4>
                                    <p class="text-muted small">
                                        Build muscles, increase your strength & maintain health.
                                    </p>
                                </div>
                            </label>
                        </div>

                    </div>

                    <button class="btn btn-dark w-100 fw-semibold mt-4">Continue</button>

                </form>

            </div>

        </div>
    </div>
</div>
<style>
/* Card wrapper */
.goal-card-wrapper {
    border-radius: 12px;
    background-color: #fdf6e3; /* light neutral background */
}

/* Main title */
.goal-card-wrapper h2 {
    font-size: 2.5rem; /* bigger main heading */
}
.goal-card-wrapper p {
    font-size: 1.2rem; 
    font-weight: 600;  
    color: #555;       
}

/* Goal option styling */
.goal-option {
    transition: transform 0.2s, box-shadow 0.2s, border 0.2s;
    cursor: pointer;
    background-color: #ffffff;
}

/* Hover effect */
.goal-option:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

/* Checked radio styling */
.goal-card input:checked + .goal-option {
    border: 2px solid #92344a;
    background-color: #f9e9f0;
}

/* Goal title */
.goal-option h3 {
    margin-bottom: 0.5rem;
    font-size: 1.50rem; /* keeps title clear but not huge */
}

/* Goal description */
.goal-option p {
    font-size: 1.0rem; /* smaller text */
    font-weight: 600;  /* bold */
    color: #555;       /* dark gray for readability */
}

/* Button styling */
.btn-dark {
    background-color: #92344a;
    color: #fff;
    font-size: 1rem;
    font-weight: 600;
    transition: background-color 0.2s;
}

.btn-dark:hover {
    background-color: #7c2b3e;
}
</style>
