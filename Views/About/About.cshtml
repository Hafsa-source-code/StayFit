@{
    ViewData["Title"] = "About Us";
}

<style>
    .about-header {
        position: relative;
        width: 100%;
        height: 80vh; /* full-screen height */
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
    }

    .about-header img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        filter: brightness(60%); /* darkens image for better text readability */
    }

    .about-header .header-text {
        position: absolute;
        z-index: 2;
        max-width: 90%;
    }

    .about-header h1 {
        font-size: 3rem;
        font-weight: 900;
        margin-bottom: 0.5rem;
    }

    .about-header p {
        font-size: 1.25rem;
        font-weight: 400;
    }

    .about-content {
        padding: 5rem 2rem;
    }

    .about-content h3 {
        font-weight: 700;
        margin-top: 2rem;
    }

    .about-content p,
    .about-content ul {
        font-size: 1.1rem;
        line-height: 1.7;
    }

    .about-content ul li {
        margin-bottom: 0.5rem;
    }
</style>

<div class="about-header">
    <img src="/images/image.png" alt="StayFit Banner" />
    <div class="header-text">
        <h1>About StayFit</h1>
