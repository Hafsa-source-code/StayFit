@{
    ViewData["Title"] = "Weight Gain Plans";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="fw-bold text-center text-success mb-3">Weight Gain Plans</h2>
        <p class="text-center text-muted mb-4">
            Choose between your workout and diet plan to continue.
        </p>

        <div class="row mt-3">

            <div class="col-md-6 mb-3">
                <a href="/Plans/WeightGainWorkout" class="text-decoration-none">
                    <div class="border rounded p-4 text-center shadow-sm hover-card">
                        <h4 class="text-primary">Workout Plan</h4>
                        <p class="small text-muted">Strength & muscle-building routines</p>
                    </div>
                </a>
            </div>

            <div class="col-md-6 mb-3">
                <a href="/Plans/WeightGainDiet" class="text-decoration-none">
                    <div class="border rounded p-4 text-center shadow-sm hover-card">
                        <h4 class="text-warning">Diet Plan</h4>
                        <p class="small text-muted">High-calorie meal plans for muscle gain</p>
                    </div>
                </a>
            </div>

        </div>
    </div>
</div>

<style>
    .hover-card:hover {
        transform: scale(1.03);
        transition: 0.2s;
        cursor: pointer;
    }
</style>
