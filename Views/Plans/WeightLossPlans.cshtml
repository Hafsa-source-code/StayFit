@{
    ViewData["Title"] = "Weight Loss Plans";
}

<div class="container mt-5">
    <!-- Card Section -->
    <div class="card shadow p-4 mb-5">
        <h2 class="fw-bold text-center text-dark mb-3">Weight Loss Plans</h2>
        <p class="text-center text-muted mb-4">
            <b>Choose between your workout and diet plan to continue.</b>
        </p>

        <div class="row mt-3">

            <div class="col-md-6 mb-3">
                <a href="/Plans/WeightLossWorkout" class="text-decoration-none">
                    <div class="hover-card">
                        <h4 class="text-primary">Workout Plan</h4>
                        <p class="small text-muted">Fat burning & cardio routines</p>
                    </div>
                </a>
            </div>

            <div class="col-md-6 mb-3">
                <a href="/Plans/WeightLossDiet" class="text-decoration-none">
                    <div class="hover-card">
                        <h4 class="text-success">Diet Plan</h4>
                        <p class="small text-muted">Low-calorie meals for weight loss</p>
                    </div>
                </a>
            </div>

        </div>
    </div>

    <!-- Image Section -->
    <div class="row justify-content-center">
        <div class="col-12">
            <img src="/images/image03.png" class="img-fluid rounded shadow" style="width:100%; max-height:500px; object-fit:cover;" />
        </div>
    </div>
</div>
<style>
/* Card styling */
.card.shadow.p-4 {
    background-color: #6490ba;  
    color: #ffffff;             
}

.hover-card {
    background-color: #ffffff; 
    color: #000000;
    border-radius: 10px;
    padding: 20px;
    border: 1px solid #ddd;
    transition: 0.2s;
    text-align: center;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* Hover effect */
.hover-card:hover {
    transform: scale(1.03);
    background-color: #f1f1f1; 
    cursor: pointer;
}

/* Card title */
.hover-card h4 {
    font-weight: 700;  /* bold */
    font-size: 1.25rem;
}

/* Card description */
.hover-card p {
    font-weight: 600;  /* semi-bold for description */
    color: #6c757d; 
    font-size: 1.2rem;
}
</style>