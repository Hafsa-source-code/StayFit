<div class="container mt-5">
    <div class="card shadow p-4">

        <h2 class="fw-bold text-info text-center">
            Feedback Form
        </h2>

        <p class="text-muted text-center mb-4">
            Tell us how we can improve your fitness experience!
        </p>

        <form id="feedbackForm">
            <div class="mb-3">
                <label class="form-label fw-semibold">Your Message</label>

                <textarea id="message"
                          class="form-control"
                          rows="5"
                          required
                          placeholder="Write your feedback here..."></textarea>
            </div>

            <button class="btn btn-info w-100 fw-semibold text-white">
                Submit Feedback
            </button>
        </form>

        <div id="feedbackMsg" class="text-center mt-3 fw-bold"></div>
    </div>
</div>

<script>
$("#feedbackForm").submit(function (e) {
    e.preventDefault();

    $.ajax({
        url: "/User/Feedback",
        type: "POST",
        data: { message: $("#message").val() },
        success: function (res) {
            $("#feedbackMsg")
                .text(res.message)
                .removeClass("text-danger")
                .addClass("text-success");

            $("#message").val("");
        },
        error: function () {
            $("#feedbackMsg")
                .text("Error submitting feedback")
                .addClass("text-danger");
        }
    });
});
</script>
