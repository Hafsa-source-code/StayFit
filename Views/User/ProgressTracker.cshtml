@{
    ViewData["Title"] = "Progress Tracker";
}
<select id="Gender" name="Gender" class="form-control">
    <option value="">Select Gender</option>
    <option value="male">Male</option>
    <option value="female">Female</option>
</select>

<input type="number" id="Age" name="Age" class="form-control" placeholder="Enter Age" />

<div class="mt-2">
    Suggested Daily Calories: <span id="calorie-result" style="font-weight:bold;"></span>
</div>


<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="fw-bold text-center text-success">Progress Tracker</h2>
        <p class="text-center text-muted mb-4">
            Log your weekly progress to stay motivated!
        </p>

        <form method="post">

            <div class="mb-3">
                <label class="form-label fw-semibold">Current Weight (kg)</label>
                <input type="number" step="0.1" name="weeklyWeight" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Notes / Comments</label>
                <textarea name="notes" class="form-control" rows="4" placeholder="How was your week?"></textarea>
            </div>

            <button class="btn btn-success w-100 fw-semibold">Save Progress</button>

        </form>
    </div>
</div>
<script>
    function calculateCalories() {
        var age = $("#Age").val();
        var gender = $("#Gender").val();

        if (age === "" || gender === "") {
            $("#calorie-result").html("");
            return;
        }

        $.ajax({
            url: "/User/GetCalorieSuggestion",
            type: "GET",
            data: { age: age, gender: gender },
            success: function (res) {
                $("#calorie-result").html(res.calories + " kcal/day");
            }
        });
    }

    $("#Age, #Gender").on("change keyup", function () {
        calculateCalories();
    });
</script>

<style>
    .progress-tracker-card {
        max-width: 600px;
    }
</style>